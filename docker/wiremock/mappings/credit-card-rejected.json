{
  "request": {
    "method": "POST",
    "url": "/host/credit-card-payment-api/payment-status",
    "bodyPatterns": [
      {
        "matchesJsonPath": {
          "expression": "$.paymentReference",
          "contains": "REJECT"
        }
      }
    ]
  },
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/json"
    },
    "jsonBody": {
      "lastUpdateDate": "{{now}}",
      "status": "REJECTED"
    },
    "transformers": ["response-template"]
  },
  "priority": 1
}
